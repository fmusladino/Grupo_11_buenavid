<%- include ('partials/head') %>
<%- include ('partials/header') %> 

<script src="/src/validators/ediciónFrontEnd.js"></script>

<body>

    <main class="main-formularios">
    
        <div class="cuadro-formularios">

            <h2>Por favor, modificar aquí los datos del producto</h2>
            <h2> con Id número:  <%= producto.id%>  </h2>

             <br>
            
            <form action="/producto/edicion/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <p>
                    
                    <label>Categoría</label>
                    <select type="text" name="category">
                        <option <% if (producto.category=='1') { %>
                            selected
                        <% } %> value="1" > Vinos Tintos </option>
                        <option <% if (producto.category=='2') { %>
                            selected
                        <% } %> value="2"> Vinos Blancos </option>
                        <option <% if (producto.category=='3') { %>
                            selected
                        <% } %> value="3"> Vinos Rosados </option>
                        <option <% if (producto.category=='4') { %>
                            selected
                        <% } %> value="4">Vinos Espumantes </option>
                </p>
<br>
                <p>
                    <label>Descripción</label>
                    <input type="text" name="description" value="<%= producto.description %>">
                    <% if (locals.errors && errors.description) { %>
                        <div class="errores-de-formularios">
                        <%= errors.description.msg %> 
                    </div>
                       <% } %>  
                </p>

                <p>
                    <label>Bodega / Productor / Fabricante</label>
                    <input type="text" name="winery" value="<%= producto.winery %>">
                    <% if (locals.errors && errors.winery) { %>
                        <div class="errores-de-formularios">
                        <%= errors.winery.msg %> 
                    </div>
                       <% } %>  
                </p>
                
                <p>
                    <label>Origen</label>
                    <input type="text" name="origin" value="<%= producto.origin %>">
                    <% if (locals.errors && errors.origin) { %>
                        <div class="errores-de-formularios">
                        <%= errors.origin.msg %> 
                    </div>
                       <% } %>  
                </p>
                <p>
                    <label>Año</label>
                    <input type="number" name="year" value="<%= producto.year %>">
                    <% if (locals.errors && errors.year) { %>
                        <div class="errores-de-formularios">
                        <%= errors.year.msg %> 
                    </div>
                       <% } %>  
                </p>
                <p>
                    <label>Precio</label>
                    <input type="number" name="price" value="<%= producto.price %>">
                    <% if (locals.errors && errors.price) { %>
                        <div class="errores-de-formularios">
                        <%= errors.price.msg %> 
                    </div>
                       <% } %>  
                </p>
               
                <p>
                    <label>Si está en Oferta/Promoción, indique el porcentaje del descuento</label>
                    <input type="number" name="discount" placeholder="0 o el numero sin el %" value="<%= producto.discount %>">
                    <% if (locals.errors && errors.discount) { %>
                        <div class="errores-de-formularios">
                        <%= errors.discount.msg %> 
                    </div>
                       <% } %>  
                </p>

                <p>
                    
                    <br>
                    <label>Desea cambiar la foto del articulo?</label>
                    <img src="/images/productos/<%= producto.image %>" width="50" height="50">
                    <input type="hidden" name="image" value="<%=producto.image%>">
                    <input type="file" name="image" accept="image/.jpg .png .jpeg">
                </p>
               
                <br>
                
                <p>
                    <label>Es un producto recomendado</label>
                    <select type="boolean" name="recomended">
                        <option
                        <% if (producto.recomended =='true') { %>
                         selected
                        <% } %> value="true"> SI </option>
                        <option <% if (producto.recomended =='false') { %>
                            selected
                           <% } %> value="false"> NO </option>
                    </select>
                </p>
                <p>
                    <button type="reset">Resetear formulario</button>
                </p>
      
                <p>
                    <button type="submit">GUARDAR PRODUCTO</button>
                </p>

            </form>
           
        </div>

    </main>



</body>


</html>