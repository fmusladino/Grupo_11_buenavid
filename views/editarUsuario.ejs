<%- include ('partials/head') %>
<%- include ('partials/header') %>

   <main class="main-formularios">
    
    <div class="cuadro-formularios">
        <h2>MODIFIQUE LOS CAMPOS QUE DESEE ACTUALIZAR</h2>
        <form action="/usuario/editar/<%= usuario.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            
            
            <p>
                <label>Seleccione su Rol</label>
                <select type="text" name="rol" id="rol"> 
                    <option value="cliente"> Cliente</option>
                    <option value="admin"> Administrador</option>
                </select>
              
            
            <p>
              <label>Nombre/s</label>
              <input type="text" name="first_name" id="first_name" value="<%= usuario.first_name %>">
            </p>

            <p>
                <label>Apellido/s</label>
                <input type="text" name="last_name" id="last_name" value="<%= usuario.last_name %>">
            </p>

            <p>
                <label>Fecha de nacimiento</label>
                <input type="date" name="date" id="date" value="<%= usuario.date %>">
            </p>

            <p>
                <label>Correo Electrónico</label>
                <input type="email" name="email" id="email" value="<%= usuario.email %>">
            </p>

            <p>
                <label>Teléfono de contacto</label>
                <input type="tel" name="cellphone" id="cellphone" value="<%= usuario.cellphone %>">
            </p>
      
            <p>
              <label>Contraseña</label>
              <input type="password" name="password" minlength="6">
              <i class="fas fa-info-circle"> Requiere mínimo 6 caracteres</i>

            </p>
      
            <p>
                <button type="submit">Actualizar</button>
            </p>
          </form>
          <form action="/usuario/eliminar/<%= usuario.id %>?_method=DELETE" method="POST">
            <h4>PRESIONE EL SIGUIENTE BOTÓN SI REALMENTE DESEA ELIMINAR A ESTE USUARIO</h4>
            <P>
                <button type="submit"> Eliminar Usuario </button>
            </P>
        </form>
       
    </div>

   </main>
    
   <%- include ('partials/footer') %> 
</html>
