<%- include ('partials/head') %>
<%- include ('partials/header') %>

        <body>

            <div class="contenedor-volver">

                <button class="btnvolver"><a href="/">Volver al listado</a></button>
            </div>  
                <div class="contenedor-gral">
                    <div class="contenedor-detalle">
                        <div class="contenedor-fotos-detalle">
                            
                        <img src="/Images/productos/<%= productoSiSuIdExsiste.image %> " class="tamano-imagen-detalle" alt="">
                        </div>

                        <div class="contenedor-texto">
                            <div class="titulo">
                                <h2><%= productoSiSuIdExsiste.name %> </h2>
                            </div>
                            <br>
                            <div class="precio"><span> $ <%= productoSiSuIdExsiste.price %></span> </div>
                            <br>
                            <% if (productoSiSuIdExsiste.discount) { %>
                                <div class="dto">
                                    <h4> <%= productoSiSuIdExsiste.discount  %>  % OFF</h4>
                                </div>
                            <% } %>
                            <div class="cuotas">
                                <h4>3 cuotas sin interes</h4>
                            </div>
                            <br>
                            <div class="btn-comprar">
                                <button class="btn-com-com"><a href=""> Comprar Ahora</a></button>
                                <button class="btn-com-car"><a href=""> Agregar al carrito</a></button>
                            </div>
                        </div>

                    </div>

                    <div class="contenedor-bajo">
                        <div class="caracteristica">
                            <div class="info-producto">
                                <h2>Caracteristicas Principales</h2>
                                <ul class="ordenar-listado-caractPrincipales">
                                   <h4>Descripción:</h4> <li><%=productoSiSuIdExsiste.description %> </li>
                                  <h4>Bodega:</h4><li><%=productoSiSuIdExsiste.winery %> </li>
                                    <h4>Origen:</h4><li><%=productoSiSuIdExsiste.origin %> </li>
                                    <h4>Año:</h4><li><%=productoSiSuIdExsiste.year %> </li>
                                </ul>

                            </div>
                            <br>
                        </div>
                        <% if(locals.userLogged){ %>
                            <% if (locals.userLogged.rol_id === 2) { %>
                                <div class="btn-crear">
                                    
                                    <form class="btn-mod" action="/producto/eliminar/<%= productoSiSuIdExsiste.id %>?_method=DELETE" method="POST">
                                        <button type="submit"> Eliminar Producto </button>
                                    </form>

                                    <button class="btn-mod"><a href="/producto/edicion/<%= productoSiSuIdExsiste.id %> "> Editar Producto</a></button>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
              
                <%- include ('partials/footer') %>

        </body>

        </html>
